{
  "name": "server",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node --esm' src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "migration:generate": "drizzle-kit generate:mysql --schema=./src/db/schema.ts",
    "migration:push": "node -r esbuild-register src/db/migrate.ts",
    "migrate": "drizzle-kit generate:mysql --schema=./src/db/schema.ts && node -r esbuild-register src/db/migrate.ts",
    "studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.10",
    "drizzle-kit": "^0.19.12",
    "nodemon": "^3.0.1",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.2",
    "express": "^4.18.2",
    "mysql2": "^3.6.0"
  }
}
